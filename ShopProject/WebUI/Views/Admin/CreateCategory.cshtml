@model CategoryWM
@{
    ViewData["Title"] = "CreateCategory";
}

<div class="container">
    <h2>Kategori Ekle/Oluştur</h2>
</div>
<hr />
<div class="container">
    <div class="row">
        <div class="col-md-8">
            <form asp-controller="Admin" asp-action="CreateCategory" method="post">
                <div class="form-group row">
                    <label asp-for="Name" class="col-md-2 col-form-label"></label>
                    <div class="col-md-10">
                        <input asp-for="Name" value="" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-10 offset-md-2">
                        <button type="submit" class="send">Kategoriyi Kaydet</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>



