
@{
    ViewData["Title"] = "Index2";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<partial name="_slider" />
<div class="container">
    <div class="row">
        <div class="col-sm-3">@await Component.InvokeAsync("CategoryList")</div>
        <div class="col-sm-9">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="row">
                            @foreach (var product in Model.Products)
                            {
                                <partial name="_product" for="@product" />
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>
